{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/notifications/daily-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/notifications/weekly-reminders",
      "schedule": "0 15-23,0,1 * * *"
    },
    {
      "path": "/api/sleep/notifications/process-scheduled",
      "schedule": "*/5 * * * *"
    }
  ]
}
