{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/notifications/daily-reminders",
      "schedule": "25 18 * * *"
    }
  ],
  "env": {
    "CRON_SECRET": "@cron-secret"
  }
}
