{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/process-medication-notifications",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/process-birthdays",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/process-event-reminders",
      "schedule": "0 9 * * *"
    }
  ]
}
